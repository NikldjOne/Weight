<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:layout_marginTop="15dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="200dp"
            app:cardCornerRadius="8dp">

            <ImageView
                android:id="@+id/img_press"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                />
            <ImageView
                android:id="@+id/img_verh_done"
                android:layout_width="40dp"
                app:srcCompat="@drawable/round2"
                android:layout_marginLeft="300dp"
                android:layout_marginTop="20dp"
                android:layout_height="40dp"
                />
            <Button
                android:id="@+id/btn_press"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:fontFamily="@font/light"
                android:textSize="20sp"
                android:gravity="bottom"
                android:paddingLeft="10dp"
                android:paddingBottom="10dp"
                android:textColor="@color/colorText"
                android:text="Жим стоя"
                android:background="@drawable/ripple_effect"/>

        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            app:cardCornerRadius="8dp">
            <ImageView
                android:id="@+id/img_dead_press"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                />
            <ImageView
                android:id="@+id/img_verh_done2"
                android:layout_width="40dp"
                app:srcCompat="@drawable/round2"
                android:layout_marginLeft="300dp"
                android:layout_marginTop="20dp"
                android:layout_height="40dp"
                />
            <Button
                android:id="@+id/btn_dead_press"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:fontFamily="@font/light"
                android:textSize="20sp"
                android:gravity="bottom"
                android:paddingLeft="10dp"
                android:paddingBottom="10dp"
                android:textColor="@color/colorText"
                android:text="Тяга штанги к подбородку"
                android:background="@drawable/ripple_effect"/>

        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            app:cardCornerRadius="8dp">
            <ImageView
                android:id="@+id/img_bench_press"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                />
            <ImageView
                android:id="@+id/img_verh_done3"
                android:layout_width="40dp"
                app:srcCompat="@drawable/round2"
                android:layout_marginLeft="300dp"
                android:layout_marginTop="20dp"
                android:layout_height="40dp"
                />
            <Button
                android:id="@+id/btn_bench_press"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:fontFamily="@font/light"
                android:textSize="20sp"
                android:gravity="bottom"
                android:textColor="@color/colorText"
                android:paddingLeft="10dp"
                android:paddingBottom="10dp"
                android:text="Жим лежа"
                android:background="@drawable/ripple_effect"/>

        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            app:cardCornerRadius="8dp">
            <ImageView
                android:id="@+id/img_biceps"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                />
            <ImageView
                android:id="@+id/img_verh_done4"
                android:layout_width="40dp"
                app:srcCompat="@drawable/round2"
                android:layout_marginLeft="300dp"
                android:layout_marginTop="20dp"
                android:layout_height="40dp"
                />
            <Button
                android:id="@+id/btn_biceps"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:fontFamily="@font/light"
                android:textSize="20sp"
                android:gravity="bottom"
                android:textColor="@color/colorText"
                android:paddingLeft="10dp"
                android:paddingBottom="10dp"
                android:text="Бицепс"
                android:background="@drawable/ripple_effect"/>

        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            app:cardCornerRadius="8dp">
            <ImageView
                android:id="@+id/img_triceps"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                />
            <ImageView
                android:id="@+id/img_verh_done5"
                android:layout_width="40dp"
                app:srcCompat="@drawable/round2"
                android:layout_marginLeft="300dp"
                android:layout_marginTop="20dp"
                android:layout_height="40dp"
                />
            <Button
                android:id="@+id/btn_triceps"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:fontFamily="@font/light"
                android:textSize="20sp"
                android:gravity="bottom"
                android:textColor="@color/colorText"
                android:paddingLeft="10dp"
                android:paddingBottom="10dp"
                android:text="Французкий жим штанги лежа"
                android:background="@drawable/ripple_effect"/>

        </androidx.cardview.widget.CardView>
    </LinearLayout>
</ScrollView>