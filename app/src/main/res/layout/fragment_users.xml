<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="25dp"
    android:orientation="vertical">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Профиль"
            android:gravity="center_horizontal"
            android:textSize="24dp"
            android:textStyle="bold"
            android:fontFamily="@font/light"
            android:layout_marginTop="10dp"/>

    <Button

        android:layout_width="30dp"
        android:layout_height="30dp"
        android:id="@+id/exitApp"
        android:background="@drawable/ripple_effect"
        android:layout_marginTop="-30dp"
        android:layout_marginLeft="150dp"
        android:drawableLeft="@drawable/ic_exit"
        />
</LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:layout_marginTop="57dp"
        android:background="@drawable/round">
        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            app:srcCompat="@drawable/ic_person_black_24dp"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="20dp"
            android:layout_marginBottom="10dp"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:text="inikita0907@gmail.com"
            android:textSize="20sp"
            android:gravity="center|left"
            android:fontFamily="@font/light"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            />
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="120dp"
        android:orientation="horizontal"
        android:background="@drawable/round">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:text="Политика конфиденциальности"
            android:textSize="20sp"
            android:gravity="center"
            android:fontFamily="@font/light"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="12dp"
            />
        <Button
            android:id="@+id/polkonf"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/ripple_effect_kryg"
            android:layout_marginLeft="-360dp"
            />
    </LinearLayout>
    <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="185dp"
    android:orientation="horizontal"
    android:background="@drawable/round">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:text="Пользовательское соглашение"
        android:textSize="20sp"
        android:gravity="center"
        android:fontFamily="@font/light"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="12dp"
        />
    <Button
        android:id="@+id/polsogl"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/ripple_effect_kryg"
        android:layout_marginLeft="-360dp"/>
</LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginTop="250dp"
        android:orientation="horizontal"
        android:background="@drawable/round">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:text="Версия:"
            android:textSize="15sp"
            android:gravity="center"
            android:fontFamily="@font/light"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:text="0.0.10"
            android:textSize="20sp"
            android:gravity="center"
            android:fontFamily="@font/light"
            android:layout_marginTop="25dp"
            android:layout_marginLeft="-360dp"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginTop="314dp"
        android:orientation="horizontal"
        android:background="@drawable/round">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:text="По всем вопросам и предложениям пишите на:"
            android:textSize="15sp"
            android:gravity="center"
            android:fontFamily="@font/light"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:text="Weightapphelper@gmail.com"
            android:textSize="20sp"
            android:gravity="center"
            android:fontFamily="@font/light"
            android:layout_marginTop="25dp"
            android:layout_marginLeft="-360dp"
            />
    </LinearLayout>
</RelativeLayout>