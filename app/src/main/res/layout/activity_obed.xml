<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBack"
    tools:context=".eat.menu_eat_syhka.Perekys">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <androidx.cardview.widget.CardView
                android:layout_width="320dp"
                android:layout_height="200dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                app:cardCornerRadius="10dp">

                <ImageView
                    android:id="@+id/kyrica"
                    android:layout_width="320dp"
                    android:layout_height="200dp"
                    android:background="@drawable/inset_default" />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Курица в соусе с кунжутом с рисом и броколли"
                    android:textAllCaps="true"
                    android:gravity="center"
                    android:layout_gravity="bottom"
                    android:layout_marginBottom="20dp"
                    android:fontFamily="@font/light"
                    android:textSize="22sp"
                    android:textColor="@color/colorText"
                    android:textStyle="bold"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="469 ккал"
                    android:textAllCaps="true"
                    android:gravity="center"
                    android:layout_gravity="bottom"
                    android:fontFamily="@font/light"
                    android:textSize="16sp"
                    android:textColor="@color/colorText"
                    android:textStyle="bold"/>
            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:layout_marginTop="20dp"
                android:layout_width="320dp"
                android:layout_height="200dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                app:cardCornerRadius="10dp">

                <ImageView
                    android:id="@+id/grek_2"
                    android:layout_width="320dp"
                    android:layout_height="200dp"
                    android:background="@drawable/inset_default" />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Греческий салат с сыром Фета"
                    android:textAllCaps="true"
                    android:gravity="center"

                    android:layout_gravity="bottom"
                    android:layout_marginBottom="20dp"
                    android:fontFamily="@font/light"
                    android:textSize="22sp"
                    android:textColor="@color/colorText"
                    android:textStyle="bold"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="226 ккал"
                    android:textAllCaps="true"
                    android:gravity="center"
                    android:layout_gravity="bottom"
                    android:fontFamily="@font/light"
                    android:textSize="16sp"
                    android:textColor="@color/colorText"
                    android:textStyle="bold"/>
            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:layout_marginTop="20dp"
                android:layout_width="320dp"
                android:layout_height="200dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                app:cardCornerRadius="10dp">

                <ImageView
                    android:id="@+id/omlet"
                    android:layout_width="320dp"
                    android:layout_height="200dp"
                    android:background="@drawable/inset_default" />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Омлет с помидором и сыром Фета"
                    android:textAllCaps="true"
                    android:gravity="center"

                    android:layout_gravity="bottom"
                    android:layout_marginBottom="20dp"
                    android:fontFamily="@font/light"
                    android:textSize="22sp"
                    android:textColor="@color/colorText"
                    android:textStyle="bold"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="310 ккал"
                    android:textAllCaps="true"
                    android:gravity="center"
                    android:layout_gravity="bottom"
                    android:fontFamily="@font/light"
                    android:textSize="16sp"
                    android:textColor="@color/colorText"
                    android:textStyle="bold"/>
            </androidx.cardview.widget.CardView>
        </LinearLayout>
    </ScrollView>
</LinearLayout>