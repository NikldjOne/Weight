<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBack"
    android:descendantFocusability="beforeDescendants"
    android:focusableInTouchMode="true"
    android:orientation="vertical"
    tools:context=".traning.ofp.Bench_Press">

    <ImageView
        android:id="@+id/img_beanchpr2"
        android:layout_width="match_parent"
        android:layout_height="200dp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:fontFamily="@font/light"
        android:gravity="center"
        android:text="Жим лежа будет выполнять в фиксированных повторения. Тут главное прогнуть поясницу и поставить ноги устойчиво"
        android:textColor="@color/colorHint"
        android:textSize="15sp" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:background="@drawable/inset_inactive"
                android:gravity="bottom">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="-20dp"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tv_weight_beanchpr"
                        android:layout_width="46dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:fontFamily="@font/light"
                        android:gravity="center"
                        android:text="100"
                        android:textColor="@color/colorText"
                        android:textSize="15sp" />

                    <TextView
                        android:layout_width="55dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:fontFamily="@font/light"
                        android:gravity="center"
                        android:text="3"
                        android:textColor="@color/colorText"
                        android:textSize="15sp" />

                    <TextView
                        android:layout_width="80dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:fontFamily="@font/light"
                        android:gravity="center"
                        android:text="4"
                        android:textColor="@color/colorText"
                        android:textSize="15sp" />

                    <TextView
                        android:layout_width="77dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:fontFamily="@font/light"
                        android:gravity="center"
                        android:text="2"
                        android:textColor="@color/colorText"
                        android:textSize="15sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:fontFamily="@font/light"
                        android:gravity="center"
                        android:text="Вес (кг)"
                        android:textColor="@color/colorHint"
                        android:textSize="15sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:fontFamily="@font/light"
                        android:gravity="center"
                        android:text="Подхода"
                        android:textColor="@color/colorHint"
                        android:textSize="15sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:fontFamily="@font/light"
                        android:gravity="center"
                        android:text="Повторения"
                        android:textColor="@color/colorHint"
                        android:textSize="15sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:fontFamily="@font/light"
                        android:gravity="center"
                        android:text="Отдых (мин)"
                        android:textColor="@color/colorHint"
                        android:textSize="15sp" />
                </LinearLayout>
            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="15dp"
                android:background="@color/colorHint2Opacity"
                android:gravity="center">

                <TextView
                    android:layout_width="80dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="10dp"
                    android:fontFamily="@font/light"
                    android:gravity="center"
                    android:text="Последний результат"
                    android:textColor="@color/colorText"
                    android:textSize="15sp" />

                <TextView
                    android:layout_width="80dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="35dp"
                    android:fontFamily="@font/light"
                    android:gravity="center"
                    android:text="Текущий результат"
                    android:textColor="@color/colorText"
                    android:textSize="15sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="40dp"
                    android:fontFamily="@font/light"
                    android:gravity="center"
                    android:text="Подход"
                    android:textColor="@color/colorText"
                    android:textSize="15sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="10dp"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_static_beanchpr"
                    android:layout_width="80dp"
                    android:layout_height="45dp"
                    android:fontFamily="@font/light"
                    android:gravity="center"
                    android:text="0"
                    android:textColor="@color/colorText"
                    android:textSize="19sp" />

                <RelativeLayout
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="35dp">

                    <ImageView
                        android:id="@+id/img_beanchpr_left"
                        android:layout_width="12dp"
                        android:layout_height="12dp"
                        android:layout_marginLeft="15dp"
                        android:layout_marginTop="18dp"
                        app:srcCompat="@drawable/left" />

                    <Button
                        android:id="@+id/btn_beanchpr_back"
                        android:layout_width="40dp"
                        android:layout_height="match_parent"
                        android:background="@drawable/ripple_effect"
                        android:fontFamily="@font/light"
                        android:textSize="15sp" />

                    <TextView
                        android:id="@+id/tv_result_beanchpr"
                        android:layout_width="60dp"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="10dp"
                        android:fontFamily="@font/light"
                        android:gravity="center"
                        android:textColor="@color/colorText"
                        android:textSize="19sp" />

                    <EditText
                        android:id="@+id/ed_result_beanchpr"
                        android:layout_width="60dp"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="10dp"
                        android:backgroundTint="@color/colorPrimaryDark"
                        android:fontFamily="@font/light"
                        android:gravity="center"
                        android:text="0"
                        android:textColor="@color/colorText"
                        android:textSize="19sp" />

                    <ImageView
                        android:id="@+id/img_beanchpr_right"
                        android:layout_width="12dp"
                        android:layout_height="12dp"
                        android:layout_marginLeft="53dp"
                        android:layout_marginTop="18dp"
                        app:srcCompat="@drawable/right" />

                    <Button
                        android:id="@+id/btn_beanchpr_add"
                        android:layout_width="40dp"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="40dp"
                        android:background="@drawable/ripple_effect"
                        android:fontFamily="@font/light"
                        android:textSize="15sp" />
                </RelativeLayout>

                <LinearLayout
                    android:id="@+id/layout_done_beanchpr"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="53dp"
                    android:background="@drawable/round2">

                    <Button
                        android:id="@+id/btn_beanchpr_done"
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:background="@drawable/ripple_effect_kryg"
                        android:fontFamily="@font/light"
                        android:gravity="center"
                        android:textSize="15sp" />

                </LinearLayout>
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#7b7b7b" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="10dp"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_static_beanchpr2"
                    android:layout_width="80dp"
                    android:layout_height="45dp"
                    android:fontFamily="@font/light"
                    android:gravity="center"
                    android:text="0"
                    android:textColor="@color/colorText"
                    android:textSize="19sp" />

                <RelativeLayout
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="35dp">

                    <ImageView
                        android:id="@+id/img_beanchpr_left2"
                        android:layout_width="12dp"
                        android:layout_height="12dp"
                        android:layout_marginLeft="15dp"
                        android:layout_marginTop="18dp"
                        app:srcCompat="@drawable/left" />

                    <Button
                        android:id="@+id/btn_beanchpr_back2"
                        android:layout_width="40dp"
                        android:layout_height="match_parent"
                        android:background="@drawable/ripple_effect"
                        android:fontFamily="@font/light"
                        android:textSize="15sp" />

                    <TextView
                        android:id="@+id/tv_result_beanchpr2"
                        android:layout_width="60dp"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="10dp"
                        android:fontFamily="@font/light"
                        android:gravity="center"
                        android:textColor="@color/colorText"
                        android:textSize="19sp" />

                    <EditText
                        android:id="@+id/ed_result_beanchpr2"
                        android:layout_width="60dp"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="10dp"
                        android:backgroundTint="@color/colorPrimaryDark"
                        android:fontFamily="@font/light"
                        android:gravity="center"
                        android:text="0"
                        android:textColor="@color/colorText"
                        android:textSize="19sp" />

                    <ImageView
                        android:id="@+id/img_beanchpr_right2"
                        android:layout_width="12dp"
                        android:layout_height="12dp"
                        android:layout_marginLeft="53dp"
                        android:layout_marginTop="18dp"
                        app:srcCompat="@drawable/right" />

                    <Button
                        android:id="@+id/btn_beanchpr_add2"
                        android:layout_width="40dp"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="40dp"
                        android:background="@drawable/ripple_effect"
                        android:fontFamily="@font/light"
                        android:textSize="15sp" />
                </RelativeLayout>

                <LinearLayout
                    android:id="@+id/layout_done_beanchpr2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="53dp"
                    android:background="@drawable/round2">

                    <Button
                        android:id="@+id/btn_beanchpr_done2"
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:background="@drawable/ripple_effect_kryg"
                        android:fontFamily="@font/light"
                        android:gravity="center"
                        android:textSize="15sp" />

                </LinearLayout>
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#7b7b7b" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="10dp"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_static_beanchpr3"
                    android:layout_width="80dp"
                    android:layout_height="45dp"
                    android:fontFamily="@font/light"
                    android:gravity="center"
                    android:text="0"
                    android:textColor="@color/colorText"
                    android:textSize="19sp" />

                <RelativeLayout
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="35dp">

                    <ImageView
                        android:id="@+id/img_beanchpr_left3"
                        android:layout_width="12dp"
                        android:layout_height="12dp"
                        android:layout_marginLeft="15dp"
                        android:layout_marginTop="18dp"
                        app:srcCompat="@drawable/left" />

                    <Button
                        android:id="@+id/btn_beanchpr_back3"
                        android:layout_width="40dp"
                        android:layout_height="match_parent"
                        android:background="@drawable/ripple_effect"
                        android:fontFamily="@font/light"
                        android:textSize="15sp" />

                    <TextView
                        android:id="@+id/tv_result_beanchpr3"
                        android:layout_width="60dp"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="10dp"
                        android:fontFamily="@font/light"
                        android:gravity="center"
                        android:textColor="@color/colorText"
                        android:textSize="19sp" />

                    <EditText
                        android:id="@+id/ed_result_beanchpr3"
                        android:layout_width="60dp"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="10dp"
                        android:backgroundTint="@color/colorPrimaryDark"
                        android:fontFamily="@font/light"
                        android:gravity="center"
                        android:text="0"
                        android:textColor="@color/colorText"
                        android:textSize="19sp" />

                    <ImageView
                        android:id="@+id/img_beanchpr_right3"
                        android:layout_width="12dp"
                        android:layout_height="12dp"
                        android:layout_marginLeft="53dp"
                        android:layout_marginTop="18dp"
                        app:srcCompat="@drawable/right" />

                    <Button
                        android:id="@+id/btn_beanchpr_add3"
                        android:layout_width="40dp"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="40dp"
                        android:background="@drawable/ripple_effect"
                        android:fontFamily="@font/light"
                        android:textSize="15sp" />
                </RelativeLayout>

                <LinearLayout
                    android:id="@+id/layout_done_beanchpr3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="53dp"
                    android:background="@drawable/round2">

                    <Button
                        android:id="@+id/btn_beanchpr_done3"
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:background="@drawable/ripple_effect_kryg"
                        android:fontFamily="@font/light"
                        android:gravity="center"
                        android:textSize="15sp" />

                </LinearLayout>
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#7b7b7b" />


            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#7b7b7b" />

            <LinearLayout
                android:id="@+id/layout_done_beanchpr6"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="20dp"
                android:background="@drawable/inset"
                android:gravity="center">

                <Button
                    android:id="@+id/close_ypr_beanchpr"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/ripple_effect"
                    android:fontFamily="@font/light"
                    android:gravity="center"
                    android:text="Завершить упражнение"
                    android:textAllCaps="false"
                    android:textColor="@color/colorText"
                    android:textSize="20sp" />
            </LinearLayout>

        </LinearLayout>


    </ScrollView>
</LinearLayout>