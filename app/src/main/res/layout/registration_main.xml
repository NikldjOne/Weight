<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:background="@color/colorBack">

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="-20dp"
        app:srcCompat="@drawable/ic_logo" />

    <TextView
        android:id="@+id/twTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="РЕГИСТРАЦИЯ"
        android:textColor="@color/colorText"
        android:layout_marginTop="-20dp"
        android:layout_gravity="center"
        android:textSize="22sp"
        android:fontFamily="@font/light"/>
    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:ignore="MissingConstraints"
        android:textColorHint="@color/colorHint"
        android:backgroundTint="@color/colorText"
        android:textColor="@color/colorText"
        android:layout_marginTop="40dp"
        app:errorEnabled="true">
        <EditText
            android:id="@+id/tiEmail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColorHint="@color/colorHint"
            android:backgroundTint="@color/colorText"
            android:textColor="@color/colorText"
            android:hint="E-Mail"
            android:inputType="textEmailAddress"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:drawableRight="@drawable/ic_email"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:fontFamily="@font/light"
            android:textSize="18sp"
            />
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:ignore="MissingConstraints"
        app:passwordToggleEnabled="true"
        android:textColorHint="@color/colorHint"
        android:backgroundTint="@color/colorText"
        android:textColor="@color/colorText"
        app:passwordToggleTint="@color/colorHint2"
        android:layout_marginTop="30dp"
        app:errorEnabled="true">

        <EditText
            android:id="@+id/text_input_password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColorHint="@color/colorHint"
            android:backgroundTint="@color/colorText"
            android:textColor="@color/colorText"
            android:hint="Пароль"
            android:inputType="textPassword"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:fontFamily="@font/light"
            android:textSize="18sp"
            />
    </com.google.android.material.textfield.TextInputLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Нажимая Зарегистрироваться, Вы соглашаетесь"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="35dp"
            android:textSize="14dp"
            android:textColor="@color/colorText"
            android:fontFamily="@font/light"/>
    </LinearLayout>
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="с "
            android:layout_marginLeft="45dp"
            android:textColor="@color/colorText"
            android:fontFamily="@font/light"
            android:textSize="13.5dp" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="пользовательским соглашением"
            android:onClick="tvpol"
            android:layout_marginLeft="54dp"
            android:textColor="@color/colorHint"
            android:fontFamily="@font/light"
            android:textSize="13.5dp" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=" и "
            android:layout_marginLeft="243dp"
            android:textSize="13.5dp"
            android:textColor="@color/colorText"
            android:fontFamily="@font/light"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="политикой"
android:onClick="tvkonf"
            android:layout_marginLeft="256dp"
            android:textSize="13.5dp"
            android:textColor="@color/colorHint"
            android:fontFamily="@font/light"/>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="tvkonf2"
            android:text="конфиденциальности"

            android:layout_marginLeft="120dp"
            android:textSize="13.5dp"
            android:textColor="@color/colorHint"
            android:fontFamily="@font/light"/>
    </RelativeLayout>
    <Button
        android:id="@+id/btnReg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Зарегистрироваться"
        android:layout_marginTop="15dp"
        android:layout_gravity="center"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:textSize="16sp"
        android:onClick="regClick"
        android:fontFamily="@font/light"
        android:textColor="@color/colorHint2"
        android:background="@drawable/inset"
        />
    <!--        android:background="@android:color/transparent"-->

</LinearLayout>