<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".traning.ofp.Squat"
    android:background="@color/colorBack"
    android:orientation="vertical">
<ImageView
    android:id="@+id/img_squat2"
    android:layout_width="match_parent"
    android:layout_height="200dp"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Приседания будем выполнять по возрастающей. То есть, 1 подход = 1 повторение, 2 подход = 2 повторения."
        android:textSize="15sp"
        android:gravity="center"
        android:fontFamily="@font/light"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:textColor="@color/colorHint"/>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:background="@drawable/inset_inactive"
                android:gravity="bottom">
                <LinearLayout
                    android:layout_marginTop="-23dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:id="@+id/tv_weight"
                        android:layout_width="46dp"
                        android:layout_height="wrap_content"
                        android:textSize="15sp"
                        android:gravity="center"
                        android:text="100"
                        android:layout_marginLeft="20dp"
                        android:fontFamily="@font/light"
                        android:textColor="@color/colorText"/>
                    <TextView
                        android:layout_width="62dp"
                        android:layout_height="wrap_content"
                        android:text="5"
                        android:textSize="15sp"
                        android:gravity="center"
                        android:layout_marginLeft="10dp"
                        android:fontFamily="@font/light"
                        android:textColor="@color/colorText"/>
                    <TextView
                        android:layout_width="80dp"
                        android:layout_height="wrap_content"
                        android:text="1, 2, 3, 4, 5"
                        android:textSize="15sp"
                        android:gravity="center"
                        android:layout_marginLeft="10dp"
                        android:fontFamily="@font/light"
                        android:textColor="@color/colorText"/>
                    <TextView
                        android:layout_width="77dp"
                        android:layout_height="wrap_content"
                        android:text="2"
                        android:textSize="15sp"
                        android:gravity="center"
                        android:layout_marginLeft="10dp"
                        android:fontFamily="@font/light"
                        android:textColor="@color/colorText"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Вес (кг)"
                        android:textSize="15sp"
                        android:gravity="center"
                        android:layout_marginLeft="20dp"
                        android:fontFamily="@font/light"
                        android:textColor="@color/colorHint"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Подходов"
                        android:textSize="15sp"
                        android:gravity="center"
                        android:layout_marginLeft="10dp"
                        android:fontFamily="@font/light"
                        android:textColor="@color/colorHint"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Повторений"
                        android:textSize="15sp"
                        android:gravity="center"
                        android:layout_marginLeft="10dp"
                        android:fontFamily="@font/light"
                        android:textColor="@color/colorHint"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Отдых (мин)"
                        android:textSize="15sp"
                        android:gravity="center"
                        android:layout_marginLeft="10dp"
                        android:fontFamily="@font/light"
                        android:textColor="@color/colorHint"/>
                </LinearLayout>
            </RelativeLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>