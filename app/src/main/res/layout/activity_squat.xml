<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBack"
    android:orientation="vertical"
    tools:context=".traning.ofp.Squat">

    <ImageView
        android:id="@+id/img_squat2"
        android:layout_width="match_parent"
        android:layout_height="200dp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:fontFamily="@font/light"
        android:gravity="center"
        android:text="Приседания будем выполнять по возрастающей. То есть, 1 подход = 1 повторение, 2 подход = 2 повторения."
        android:textColor="@color/colorHint"
        android:textSize="15sp" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:background="@drawable/inset_inactive"
                android:gravity="bottom">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="-20dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tv_weight"
                        android:layout_width="46dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:fontFamily="@font/light"
                        android:gravity="center"
                        android:text="100"
                        android:textColor="@color/colorText"
                        android:textSize="15sp" />

                    <TextView
                        android:layout_width="62dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:fontFamily="@font/light"
                        android:gravity="center"
                        android:text="5"
                        android:textColor="@color/colorText"
                        android:textSize="15sp" />

                    <TextView
                        android:layout_width="80dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:fontFamily="@font/light"
                        android:gravity="center"
                        android:text="1, 2, 3, 4, 5"
                        android:textColor="@color/colorText"
                        android:textSize="15sp" />

                    <TextView
                        android:layout_width="77dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:fontFamily="@font/light"
                        android:gravity="center"
                        android:text="2"
                        android:textColor="@color/colorText"
                        android:textSize="15sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:fontFamily="@font/light"
                        android:gravity="center"
                        android:text="Вес (кг)"
                        android:textColor="@color/colorHint"
                        android:textSize="15sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:fontFamily="@font/light"
                        android:gravity="center"
                        android:text="Подходов"
                        android:textColor="@color/colorHint"
                        android:textSize="15sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:fontFamily="@font/light"
                        android:gravity="center"
                        android:text="Повторений"
                        android:textColor="@color/colorHint"
                        android:textSize="15sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:fontFamily="@font/light"
                        android:gravity="center"
                        android:text="Отдых (мин)"
                        android:textColor="@color/colorHint"
                        android:textSize="15sp" />
                </LinearLayout>
            </RelativeLayout>
            <LinearLayout
                android:layout_marginTop="15dp"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@color/colorHint2Opacity">
                <TextView
                    android:layout_width="80dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="30dp"
                    android:fontFamily="@font/light"
                    android:gravity="center"
                    android:text="Последний результат"
                    android:textColor="@color/colorText"
                    android:textSize="15sp" />
                <TextView
                    android:layout_width="80dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="35dp"
                    android:fontFamily="@font/light"
                    android:gravity="center"
                    android:text="Текущий результат"
                    android:textColor="@color/colorText"
                    android:textSize="15sp" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="40dp"
                    android:fontFamily="@font/light"
                    android:gravity="center"
                    android:text="Подход"
                    android:textColor="@color/colorText"
                    android:textSize="15sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="80dp"
                    android:layout_height="45dp"
                    android:layout_marginLeft="30dp"
                    android:fontFamily="@font/light"
                    android:gravity="center"
                    android:text="0"
                    android:textColor="@color/colorText"
                    android:textSize="19sp" />
                <LinearLayout
                    android:layout_marginLeft="45dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                <EditText
                    android:layout_width="60dp"
                    android:layout_height="match_parent"
                    android:fontFamily="@font/light"
                    android:backgroundTint="@color/colorPrimaryDark"
                    android:gravity="center"
                    android:text="0"
                    android:textColor="@color/colorText"
                    android:textSize="19sp" />
                </LinearLayout>
                <Button
                    android:layout_marginTop="-2dp"
                    android:background="@drawable/round2"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_marginLeft="60dp"
                    android:fontFamily="@font/light"
                    android:gravity="center"
                    android:textSize="15sp" />
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#7b7b7b" />
        </LinearLayout>



    </ScrollView>
</LinearLayout>